%h1 Listing employees

%table
  %thead
    %tr
      %th Employee
      %th First name
      %th Last name
      %th Department
      %th Admin
      %th
      %th
      %th

  %tbody
    - @employees.each do |employee|
      %tr
        %td= employee.employee_id
        %td= employee.first_name
        %td= employee.last_name
        %td= employee.department
        %td= employee.admin
        %td= link_to 'Show', employee
        %td= link_to 'Edit', edit_employee_path(employee)
        %td= link_to 'Destroy', employee, :method => :delete, :data => { :confirm => 'Are you sure?' }

