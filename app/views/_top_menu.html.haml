.row
  .column.small-12
    %nav#main-menu.top-bar
      .top-bar-title
        %strong Textile.Co
      #responsive-menu
        - fullpath = request.fullpath
        .top-bar-left
          %ul.menu
            %li{class: class_by_fullpath('active', fullpath, 'assistance')}
              %a{href: assistance_path} Assistance
            %li{class: class_by_fullpath('active', fullpath, 'reported_errors')}
              %a{:href => reported_errors_path} Timesheet Errors
        .top-bar-right
          %ul.menu
            %li{class: class_by_fullpath('active', fullpath, ['timelogs', 'timelog_errors'])}
              = link_to 'My Timesheets', timelogs_path
            %li{class: class_by_fullpath('active', fullpath, 'employees')}
              %a{href: employee_path(current_employee)} My Profile
            %li
              = link_to 'Sign Out', destroy_employee_session_path, method: :delete
  .column.small-12
    = render './alert_warning'
