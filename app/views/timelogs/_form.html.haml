= form_for @timelog do |f|
  %p
    %strong Timelog ID:
    = @timelog.id

  %table
    %thead
      %th Moment
      %th Reported
      %th 
        = 'Claimed by Employee'
        %br/
        %span (ex: 5:35 pm)
    %tbody
      %tr
        %td Arrival
        %td= strftime_as_time(@timelog.log_date + @timelog.arrive_sec)
        - value = strftime_as_time(@timelog.log_date + @timelog.claim_arrive_sec)
        %td= f.text_field :claim_arrive_sec, value: value
      %tr
        %td Departure
        %td= strftime_as_time(@timelog.log_date + @timelog.arrive_sec)
        - value = strftime_as_time(@timelog.log_date + @timelog.claim_arrive_sec)
        %td= f.text_field :claim_leave_sec, value: value

  .actions
    = f.submit 'Submit', class: 'button'
    = link_to 'Cancel', timelogs_path, class: 'float-right button warning'
